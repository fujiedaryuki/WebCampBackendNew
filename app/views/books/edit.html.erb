<h1>Editing Book</h1>
<%= form_with model:@book, local: true do |f| %>
  <%= render 'shared/error_message' %>
  <%= f.label :Title %><br/>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <br><%= f.submit 'Update Book' %></br>
<% end %>

<%= link_to "show", book_path(@book) %> | <%= link_to 'Back', books_path %>